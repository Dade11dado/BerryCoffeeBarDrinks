<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vavasimo.berrycoffeebardrinks">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".Model.Notification"
        android:allowBackup="true"
        android:icon="@mipmap/ic_berry_square"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_berry_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ScannerActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityClienti" />
        <activity android:name=".LogInActivity" />
        <activity android:name=".ActivityRegistrazione" />
        <activity android:name=".RecuperoPassword" />
        <activity android:name=".ActivityGestione" />

        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="barcode" />

    </application>

</manifest>